<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.finalprogeti.LavelOne"
    tools:layout_editor_absoluteY="81dp">

    <TableLayout
        android:id="@+id/tableOneLay"
        android:layout_width="382dp"
        android:layout_height="309dp"
        android:background="@android:color/transparent"
        android:stretchColumns="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:weightSum="3">

            <ImageView
                android:id="@+id/ivBack102"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/pic11" />

            <ImageView
                android:id="@+id/ivBack103"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/cardbackpic" />

            <ImageView
                android:id="@+id/ivBack104"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/cardbackpic" />

            <ImageView
                android:id="@+id/ivBack101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pic33" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            android:weightSum="3">

            <ImageView
                android:id="@+id/ivBack201"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/cardbackpic" />

            <ImageView
                android:id="@+id/ivBack202"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/pic55" />

            <ImageView
                android:id="@+id/ivBack203"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/pic88" />

            <ImageView
                android:id="@+id/ivBack204"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/cardbackpic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack301"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/cardbackpic" />

            <ImageView
                android:id="@+id/ivBack302"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/cardbackpic" />

            <ImageView
                android:id="@+id/ivBack303"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/pic66" />

            <ImageView
                android:id="@+id/ivBack304"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/cardbackpic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack401"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/pic44" />

            <ImageView
                android:id="@+id/ivBack402"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/pic77" />

            <ImageView
                android:id="@+id/ivBack403"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/cardbackpic" />

            <ImageView
                android:id="@+id/ivBack404"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:clickable="true"
                app:srcCompat="@drawable/pic22" />

        </TableRow>
    </TableLayout>

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="214dp"
        android:layout_height="77dp"
        android:background="@drawable/timerframe"
        android:gravity="center"
        android:textColor="#ffff"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"></Chronometer>

    <ImageButton
        android:id="@+id/btStart"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:background="@drawable/startpic"
        android:onClick="StartTheGame"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <ImageButton
        android:id="@+id/btRestart"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/restartpic"
        android:onClick="Restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <TextView
        android:id="@+id/tvStart"
        android:layout_width="133dp"
        android:layout_height="56dp"
        android:text="START"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="111dp"
        android:layout_height="21dp"
        android:text="save  Time"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />

    <ImageButton
        android:id="@+id/btSaveScore"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/savebutton"
        android:onClick="SaveScore"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="SCORE:"
        android:textAlignment="center"
        android:textColor="@color/Yellow"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786" />

    <TextView
        android:id="@+id/tvPairs"
        android:layout_width="118dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:textColor="@color/Blue"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.848" />

    <ImageView
        android:id="@+id/ivGameOver"
        android:layout_width="117dp"
        android:layout_height="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:srcCompat="@drawable/gameover" />

</androidx.constraintlayout.widget.ConstraintLayout>